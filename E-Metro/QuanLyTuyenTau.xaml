                            BorderBrush="White"
                            VerticalContentAlignment="Center" TextAlignment="Left" Padding="16, 0, 0, 0"
                            Foreground="#ff707070" Background="Transparent" Text="Bạn cần gì..." FontStyle="Italic"/>
